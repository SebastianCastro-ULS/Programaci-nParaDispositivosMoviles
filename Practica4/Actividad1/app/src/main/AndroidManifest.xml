<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.act4perfil">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Segunda pantalla (no necesita exported porque no tiene intent-filter) -->
        <activity android:name=".ResumenActivity" />

        <!-- Pantalla principal (formulario de inicio) -->
        <activity
            android:name=".FormularioActivity"
            android:exported="true"> <!-- ðŸ‘ˆ SE AGREGA ESTO -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>